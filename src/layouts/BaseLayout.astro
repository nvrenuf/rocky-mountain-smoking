---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import { getBuildFingerprint } from '../utils/buildFingerprint';

const {
  title = 'Rocky Mountain Smoking',
  description = 'Rocky Mountain Smoking â€” high-altitude BBQ recipes and techniques tuned for dry air and steady smoke.',
} = Astro.props as {
  title?: string;
  description?: string;
};

const analyticsDebug = import.meta.env.PUBLIC_ANALYTICS_DEBUG === 'true';
const fingerprint = getBuildFingerprint();
const gaMeasurementId = import.meta.env.PUBLIC_GA_MEASUREMENT_ID;
---

<!DOCTYPE html>
<html lang="en" class="bg-[var(--color-page)] text-[var(--color-text)]">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="build" content={fingerprint.metaContent} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght@9..144,400;9..144,600;9..144,700&family=Barlow+Semi+Condensed:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    {gaMeasurementId && (
      <>
        <script async src={`https://www.googletagmanager.com/gtag/js?id=${gaMeasurementId}`}></script>
        <script>
          {`
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());
            gtag('config', '${gaMeasurementId}');
          `}
        </script>
      </>
    )}
  </head>
  <body class="bg-[var(--color-page)] text-[var(--color-text)] font-sans antialiased">
    <Navbar />
    <main class="min-h-screen">
      <slot />
    </main>
    <Footer fingerprint={fingerprint} />
    <script is:inline>
      {`
        (function() {
          const debug = ${analyticsDebug ? 'true' : 'false'};
          if (!window.gtag && debug) {
            console.info('[analytics] GA4 not configured. Events will log to console when triggered.');
          }
        })();
      `}
    </script>
  </body>
</html>
