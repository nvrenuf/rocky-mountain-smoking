# Newsletter provider (Supabase + Resend)
# PUBLIC_ENABLE_SUBSCRIBE_API gates the API route. Keep false in production until credentials are set.
PUBLIC_ENABLE_SUBSCRIBE_API=false
SITE_URL=
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
RESEND_API_KEY=
RESEND_FROM=

# Rate limiting (Upstash Redis REST)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# See NEWSLETTER_SECURITY.md for controls and required env vars.

# Analytics (optional)
# Provide a GA4 measurement ID to enable basic page + event tracking.
PUBLIC_GA_MEASUREMENT_ID=
# Set to "true" to log analytics events to the console when GA is not configured.
PUBLIC_ANALYTICS_DEBUG=false
